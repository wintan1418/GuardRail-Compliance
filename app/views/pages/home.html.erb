<% end %>

<!-- Header -->
<header class="bg-white border-b border-slate-200 sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
    <a href="/" class="flex items-center gap-2 text-xl font-bold text-slate-900">
      <span class="w-9 h-9 bg-emerald-500 rounded-lg flex items-center justify-center text-white font-bold">G</span>
      GuardRail
    </a>
    <nav class="hidden md:flex items-center gap-8">
      <a href="#features" class="text-slate-600 hover:text-slate-900 font-medium">Features</a>
      <a href="#pricing" class="text-slate-600 hover:text-slate-900 font-medium">Pricing</a>
      <a href="#testimonials" class="text-slate-600 hover:text-slate-900 font-medium">Testimonials</a>
    </nav>
    <div class="flex items-center gap-4">
      <%= link_to 'Log In', new_user_session_path, class: 'text-slate-600 hover:text-slate-900 font-medium' %>
      <%= link_to 'Book A Demo', new_user_registration_path, class: 'bg-emerald-500 hover:bg-emerald-600 text-white px-5 py-2.5 rounded-lg font-semibold transition-all hover:-translate-y-0.5 hover:shadow-lg' %>
    </div>
  </div>
</header>

<!-- Hero Section -->
<section class="bg-white py-16 lg:py-20">
  <div class="max-w-7xl mx-auto px-6 grid lg:grid-cols-2 gap-12 items-center">
    <div>
      <h1 class="text-4xl lg:text-5xl font-bold text-slate-900 leading-tight mb-4">
        Never Miss a Deadline Again. Protect Your Practice
      </h1>
      <p class="text-lg text-slate-500 mb-8">
        Automated Compliance for Medical & Law Firms
      </p>
      <div class="flex flex-wrap items-center gap-4">
        <%= link_to 'Get Started Free', new_user_registration_path, class: 'bg-emerald-500 hover:bg-emerald-600 text-white px-6 py-3 rounded-lg font-semibold transition-all hover:-translate-y-0.5 hover:shadow-lg hover:shadow-emerald-500/25' %>
        <a href="#demo" class="flex items-center gap-3 text-slate-700 font-medium group">
          <span class="w-12 h-12 bg-slate-900 rounded-full flex items-center justify-center text-white group-hover:bg-slate-700 transition-colors">
            <svg class="w-4 h-4 ml-0.5" fill="currentColor" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>
          </span>
          Watch 2-Min Demo
        </a>
      </div>
    </div>
    <div class="relative">
      <div class="rounded-2xl overflow-hidden shadow-2xl shadow-slate-200">
        <img src="/images/hero-doctor.png" alt="Doctor using compliance dashboard" class="w-full h-auto">
      </div>
      <div class="absolute -top-4 -right-4 w-16 h-16 bg-emerald-500 rounded-full flex items-center justify-center shadow-lg shadow-emerald-500/30">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/></svg>
      </div>
    </div>
  </div>
</section>

<!-- Problem / Solution Section -->
<section id="features" class="py-16 lg:py-20 bg-slate-50">
  <div class="max-w-7xl mx-auto px-6 grid lg:grid-cols-2 gap-16">
    <!-- Problem -->
    <div>
      <h3 class="text-xl font-semibold text-slate-900 mb-6">Manual Tracking is Risky</h3>
      <div class="space-y-6">
        <div class="flex gap-4">
          <div class="w-12 h-12 bg-slate-200 rounded-xl flex items-center justify-center shrink-0">
            <svg class="w-6 h-6 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2"/></svg>
          </div>
          <div>
            <h4 class="font-semibold text-slate-900 mb-1">Spreadsheet Chaos</h4>
            <p class="text-slate-500">Spreadsheets get out of date fast and critical deadlines slip through the cracks</p>
          </div>
        </div>
        <div class="flex gap-4">
          <div class="w-12 h-12 bg-red-100 rounded-xl flex items-center justify-center shrink-0">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
          </div>
          <div>
            <h4 class="font-semibold text-slate-900 mb-1">Steep Fines (up to $10k+)</h4>
            <p class="text-slate-500">Lost Peace of Mind — one missed HIPAA deadline can cost your practice thousands</p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Solution -->
    <div>
      <h3 class="text-xl font-semibold text-emerald-600 mb-6">GuardRail: Your Shield</h3>
      <div class="grid sm:grid-cols-2 gap-4">
        <div class="bg-white border border-slate-200 rounded-2xl p-6 hover:shadow-lg hover:border-emerald-200 transition-all">
          <div class="w-14 h-14 bg-gradient-to-br from-emerald-100 to-teal-100 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-7 h-7 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
          </div>
          <h4 class="font-semibold text-slate-900 mb-2">Smart Reminders</h4>
          <p class="text-slate-500 text-sm">Multi-channel alerts via Email, SMS, and Slack weeks in advance</p>
        </div>
        <div class="bg-white border border-slate-200 rounded-2xl p-6 hover:shadow-lg hover:border-emerald-200 transition-all">
          <div class="w-14 h-14 bg-gradient-to-br from-emerald-100 to-teal-100 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-7 h-7 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
          </div>
          <h4 class="font-semibold text-slate-900 mb-2">Secure Document Vault</h4>
          <p class="text-slate-500 text-sm">Encrypted HIPAA-compliant storage with one-click audit reports</p>
        </div>
      </div>
    </div>
  </div>
</section>

