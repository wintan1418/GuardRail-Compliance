  <title>GuardRail - Compliance Management for Medical & Legal Practices</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --color-primary: #1E293B;
      --color-accent: #10B981;
      --color-accent-dark: #059669;
      --color-bg: #F8FAFC;
      --color-white: #FFFFFF;
      --color-gray-100: #F1F5F9;
      --color-gray-200: #E2E8F0;
      --color-gray-500: #64748B;
      --color-gray-700: #334155;
      --color-gray-900: #0F172A;
    }
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background: var(--color-bg);
      color: var(--color-gray-900);
      line-height: 1.6;
    }
    .container { max-width: 1200px; margin: 0 auto; padding: 0 2rem; }
    
    /* Header */
    header {
      background: var(--color-white);
      border-bottom: 1px solid var(--color-gray-200);
      padding: 1rem 0;
      position: sticky;
      top: 0;
      z-index: 100;
    }
    .header-inner {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .logo {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--color-gray-900);
      text-decoration: none;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    .logo-icon {
      width: 36px;
      height: 36px;
      background: var(--color-accent);
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-weight: 700;
    }
    nav { display: flex; align-items: center; gap: 2rem; }
    nav a {
      color: var(--color-gray-700);
      text-decoration: none;
      font-weight: 500;
      font-size: 0.95rem;
      transition: color 0.2s;
    }
    nav a:hover { color: var(--color-gray-900); }
    .nav-cta {
      display: flex;
      gap: 1rem;
      align-items: center;
    }
    
    /* Buttons */
    .btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      font-weight: 600;
      font-size: 0.95rem;
      text-decoration: none;
      transition: all 0.2s;
      border: none;
      cursor: pointer;
    }
    .btn-primary {
      background: var(--color-accent);
      color: var(--color-white);
    }
    .btn-primary:hover {
      background: var(--color-accent-dark);
      transform: translateY(-1px);
      box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
    }
    .btn-secondary {
      background: var(--color-white);
      color: var(--color-gray-900);
      border: 1px solid var(--color-gray-200);
    }
    .btn-secondary:hover {
      border-color: var(--color-gray-300);
      background: var(--color-gray-100);
    }
    
    /* Hero Section */
    .hero {
      background: var(--color-white);
      padding: 4rem 0;
    }
    .hero-inner {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: center;
    }
    .hero-content h1 {
      font-size: 3rem;
      font-weight: 700;
      line-height: 1.15;
      margin-bottom: 1rem;
      color: var(--color-gray-900);
    }
    .hero-content p {
      font-size: 1.125rem;
      color: var(--color-gray-500);
      margin-bottom: 2rem;
    }
    .hero-buttons { display: flex; gap: 1rem; align-items: center; }
    .watch-demo {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      color: var(--color-gray-700);
      text-decoration: none;
      font-weight: 500;
    }
    .play-icon {
      width: 48px;
      height: 48px;
      background: var(--color-gray-900);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
    }
    .hero-image {
      position: relative;
      background: linear-gradient(135deg, #E0F2F1 0%, #B2DFDB 100%);
      border-radius: 20px;
      height: 400px;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
    }
    .hero-image-placeholder {
      font-size: 6rem;
      opacity: 0.5;
    }
    .compliance-badge {
      position: absolute;
      top: 2rem;
      right: 2rem;
      width: 60px;
      height: 60px;
      background: var(--color-accent);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 1.5rem;
      box-shadow: 0 8px 24px rgba(16, 185, 129, 0.3);
    }
    
    /* Problem/Solution Section */
    .problem-solution {
      padding: 5rem 0;
    }
    .ps-grid {
      display: grid;
      grid-template-columns: 1fr 1.2fr;
      gap: 4rem;
    }
    .problem h3 {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 1.5rem;
      color: var(--color-gray-900);
    }
    .problem-item {
      display: flex;
      gap: 1rem;
      margin-bottom: 1.25rem;
      align-items: flex-start;
    }
    .problem-icon {
      width: 48px;
      height: 48px;
      background: var(--color-gray-100);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.25rem;
      flex-shrink: 0;
    }
    .problem-text h4 {
      font-weight: 600;
      font-size: 1rem;
      margin-bottom: 0.25rem;
    }
    .problem-text p {
      color: var(--color-gray-500);
      font-size: 0.9rem;
    }
    .solution h3 {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 1.5rem;
      color: var(--color-accent);
    }
    .solution-cards {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1.5rem;
    }
    .solution-card {
      background: var(--color-white);
      border: 1px solid var(--color-gray-200);
      border-radius: 16px;
      padding: 1.5rem;
      text-align: center;
    }
    .solution-card-icon {
      width: 56px;
      height: 56px;
      background: linear-gradient(135deg, #E0F2F1 0%, #B2DFDB 100%);
      border-radius: 14px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1rem;
      font-size: 1.5rem;
    }
    .solution-card h4 {
      font-weight: 600;
      margin-bottom: 0.5rem;
    }
    .solution-card p {
      color: var(--color-gray-500);
      font-size: 0.875rem;
    }
    
    /* CTA Section */
    .cta-section {
      padding: 3rem 0;
    }
    .cta-inner {
      background: linear-gradient(135deg, var(--color-primary) 0%, #334155 100%);
      border-radius: 24px;
      padding: 3rem;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
      align-items: center;
    }
    .cta-content h2 {
      font-size: 2rem;
      font-weight: 700;
      color: var(--color-white);
      margin-bottom: 1.5rem;
    }
    .cta-buttons { display: flex; flex-direction: column; gap: 0.75rem; }
    .cta-buttons .btn-primary { width: fit-content; }
    .cta-buttons a:not(.btn) { color: rgba(255,255,255,0.7); font-size: 0.95rem; }
    .testimonial-card {
      background: var(--color-white);
      border-radius: 16px;
      padding: 1.5rem;
      display: flex;
      gap: 1rem;
    }
    .testimonial-avatar {
      width: 48px;
      height: 48px;
      background: var(--color-gray-200);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.25rem;
      flex-shrink: 0;
    }
    .testimonial-content h4 { font-weight: 600; margin-bottom: 0.25rem; }
    .testimonial-content .role { color: var(--color-gray-500); font-size: 0.875rem; margin-bottom: 0.75rem; }
    .testimonial-content .quote { font-style: italic; color: var(--color-gray-700); font-size: 0.95rem; }
    .report-card {
      background: var(--color-white);
      border-radius: 16px;
      padding: 1.5rem;
      display: flex;
      gap: 1rem;
      align-items: flex-start;
    }
    .report-icon {
      width: 40px;
      height: 40px;
      background: var(--color-accent);
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
    }
    .report-content h4 { font-weight: 600; margin-bottom: 0.25rem; }
    .report-content p { color: var(--color-gray-500); font-size: 0.875rem; }
    
    /* Footer */
    footer {
      background: var(--color-white);
      border-top: 1px solid var(--color-gray-200);
      padding: 3rem 0 2rem;
    }
    .footer-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr) auto;
      gap: 2rem;
      margin-bottom: 2rem;
    }
    .footer-col h4 {
      font-weight: 600;
      margin-bottom: 1rem;
      color: var(--color-gray-900);
    }
    .footer-col a {
      display: block;
      color: var(--color-gray-500);
      text-decoration: none;
      font-size: 0.9rem;
      margin-bottom: 0.5rem;
      transition: color 0.2s;
    }
    .footer-col a:hover { color: var(--color-gray-900); }
    .footer-bottom {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-top: 2rem;
      border-top: 1px solid var(--color-gray-200);
      color: var(--color-gray-500);
      font-size: 0.875rem;
    }
    .social-links { display: flex; gap: 1rem; }
    .social-links a {
      width: 36px;
      height: 36px;
      background: var(--color-accent);
      border-radius: 50%;
      display: flex;
      align-items: center;
