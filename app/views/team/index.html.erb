<div class="min-h-screen bg-slate-50">
  <%= render 'shared/header' %>

  <div class="max-w-7xl mx-auto px-6 py-8">
    <div class="flex justify-between items-center mb-8">
      <div>
        <h1 class="text-2xl font-bold text-slate-900">Team</h1>
        <p class="text-slate-500"><%= @team_members.count %> members</p>
      </div>
      <% if current_user.admin? %>
        <button class="flex items-center gap-2 bg-emerald-500 hover:bg-emerald-600 text-white px-5 py-2.5 rounded-lg font-semibold transition-all" disabled title="Coming soon">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
          Invite Member
        </button>
      <% end %>
    </div>

    <!-- Team Members Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @team_members.each do |member| %>
        <div class="bg-white rounded-2xl border border-slate-200 p-6 hover:shadow-lg transition-shadow">
          <div class="flex items-start justify-between mb-4">
            <div class="flex items-center gap-4">
              <div class="w-14 h-14 bg-emerald-100 rounded-full flex items-center justify-center text-xl font-semibold text-emerald-700">
                <%= member.first_name[0] %><%= member.last_name[0] %>
              </div>
              <div>
                <%= link_to member.full_name, team_path(member), class: 'font-semibold text-slate-900 hover:text-emerald-600' %>
                <p class="text-sm text-slate-500"><%= member.email %></p>
              </div>
            </div>
            <% if current_user.admin? && member != current_user && !member.owner? %>
              <div class="relative" data-controller="dropdown">
                <button data-action="click->dropdown#toggle" class="p-2 text-slate-400 hover:text-slate-600 hover:bg-slate-100 rounded-lg">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/></svg>
                </button>
                <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-40 bg-white rounded-lg shadow-lg border border-slate-200 py-1 z-10">
                  <%= link_to team_path(member), class: 'block px-4 py-2 text-sm text-slate-700 hover:bg-slate-50' do %>
                    View Profile
                  <% end %>
                  <%= button_to team_path(member), method: :delete, class: 'block w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-red-50', data: { turbo_confirm: "Remove #{member.full_name} from the team?" } do %>
                    Remove
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>

          <div class="flex items-center gap-2 mb-4">
            <% case member.role %>
            <% when 'owner' %>
              <span class="px-2.5 py-0.5 bg-purple-100 text-purple-700 rounded-full text-xs font-medium">Owner</span>
            <% when 'admin' %>
              <span class="px-2.5 py-0.5 bg-blue-100 text-blue-700 rounded-full text-xs font-medium">Admin</span>
            <% else %>
              <span class="px-2.5 py-0.5 bg-slate-100 text-slate-700 rounded-full text-xs font-medium">Staff</span>
            <% end %>
            <% if member.title.present? %>
              <span class="text-sm text-slate-500"><%= member.title %></span>
            <% end %>
          </div>

          <div class="text-sm text-slate-500 space-y-1">
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>
              <span><%= member.uploaded_documents.count %> documents uploaded</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/></svg>
              <span><%= member.assigned_documents.count %> assigned</span>
            </div>
          </div>

          <% if member.license_expiration.present? %>
            <div class="mt-4 pt-4 border-t border-slate-100">
              <div class="flex items-center justify-between text-sm">
                <span class="text-slate-500">License Expires</span>
                <span class="<%= member.license_expired? ? 'text-red-600 font-medium' : member.license_expiring_soon? ? 'text-amber-600' : 'text-slate-900' %>">
                  <%= member.license_expiration.strftime('%b %d, %Y') %>
                </span>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <% if @team_members.empty? %>
      <div class="text-center py-12">
        <svg class="w-12 h-12 text-slate-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/></svg>
        <p class="text-slate-500">No team members yet</p>
      </div>
    <% end %>
  </div>
</div>
