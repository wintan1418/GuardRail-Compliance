<div class="min-h-screen bg-slate-50 flex items-center justify-center py-12 px-4">
  <div class="max-w-md w-full">
    <!-- Logo -->
    <div class="text-center mb-8">
      <a href="/" class="inline-flex items-center gap-2 text-2xl font-bold text-slate-900">
        <span class="w-10 h-10 bg-emerald-500 rounded-xl flex items-center justify-center text-white font-bold">G</span>
        GuardRail
      </a>
      <h2 class="mt-6 text-2xl font-bold text-slate-900">Welcome back</h2>
      <p class="mt-2 text-slate-600">Sign in to your account</p>
    </div>

    <div class="bg-white rounded-2xl border border-slate-200 p-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-5' }) do |f| %>
        <% if flash[:alert] %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4 text-sm text-red-700">
            <%= flash[:alert] %>
          </div>
        <% end %>

        <div>
          <label class="block text-sm font-medium text-slate-700 mb-1">Email</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full px-4 py-2.5 border border-slate-200 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500', placeholder: 'you@practice.com' %>
        </div>

        <div>
          <div class="flex justify-between items-center mb-1">
            <label class="block text-sm font-medium text-slate-700">Password</label>
            <%= link_to 'Forgot password?', new_user_password_path, class: 'text-sm text-emerald-600 hover:text-emerald-700' %>
          </div>
          <%= f.password_field :password, autocomplete: "current-password", class: 'w-full px-4 py-2.5 border border-slate-200 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500', placeholder: 'Enter your password' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <label class="flex items-center gap-2 cursor-pointer">
            <%= f.check_box :remember_me, class: 'w-4 h-4 text-emerald-600 border-slate-300 rounded focus:ring-emerald-500' %>
            <span class="text-sm text-slate-700">Remember me</span>
          </label>
        <% end %>

        <div class="pt-2">
          <%= f.submit "Sign In", class: 'w-full bg-emerald-500 hover:bg-emerald-600 text-white py-3 rounded-lg font-semibold transition-all cursor-pointer' %>
        </div>

        <p class="text-center text-sm text-slate-600">
          Don't have an account?
          <%= link_to 'Start free trial', new_user_registration_path, class: 'text-emerald-600 hover:text-emerald-700 font-medium' %>
        </p>
      <% end %>
    </div>
  </div>
</div>
