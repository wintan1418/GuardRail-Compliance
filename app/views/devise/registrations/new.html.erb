<div class="min-h-screen bg-slate-50 flex items-center justify-center py-12 px-4">
  <div class="max-w-md w-full">
    <!-- Logo -->
    <div class="text-center mb-8">
      <a href="/" class="inline-flex items-center gap-2 text-2xl font-bold text-slate-900">
        <span class="w-10 h-10 bg-emerald-500 rounded-xl flex items-center justify-center text-white font-bold">G</span>
        GuardRail
      </a>
      <h2 class="mt-6 text-2xl font-bold text-slate-900">Start your free trial</h2>
      <p class="mt-2 text-slate-600">14 days free. No credit card required.</p>
    </div>

    <div class="bg-white rounded-2xl border border-slate-200 p-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'space-y-5' }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Organization Info -->
        <div class="pb-5 border-b border-slate-200">
          <h3 class="font-semibold text-slate-900 mb-4">Your Practice</h3>
          
          <%= fields_for :organization, @organization || Organization.new do |org| %>
            <div class="space-y-4">
              <div>
                <label class="block text-sm font-medium text-slate-700 mb-1">Practice Name</label>
                <%= org.text_field :name, class: 'w-full px-4 py-2.5 border border-slate-200 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500', placeholder: 'e.g., Chen Medical Group' %>
              </div>
              <div>
                <label class="block text-sm font-medium text-slate-700 mb-1">Industry</label>
                <%= org.select :industry, [['Medical Practice', 'medical'], ['Dental Office', 'dental'], ['Law Firm', 'legal'], ['Other', 'other']], {}, class: 'w-full px-4 py-2.5 border border-slate-200 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500' %>
              </div>
            </div>
          <% end %>
        </div>

        <!-- User Info -->
        <div class="space-y-4">
          <h3 class="font-semibold text-slate-900">Your Information</h3>
          
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-slate-700 mb-1">First Name</label>
              <%= f.text_field :first_name, class: 'w-full px-4 py-2.5 border border-slate-200 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500', placeholder: 'John' %>
            </div>
            <div>
              <label class="block text-sm font-medium text-slate-700 mb-1">Last Name</label>
              <%= f.text_field :last_name, class: 'w-full px-4 py-2.5 border border-slate-200 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500', placeholder: 'Smith' %>
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-slate-700 mb-1">Email</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full px-4 py-2.5 border border-slate-200 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500', placeholder: 'you@practice.com' %>
          </div>

          <div>
            <label class="block text-sm font-medium text-slate-700 mb-1">Password</label>
            <%= f.password_field :password, autocomplete: "new-password", class: 'w-full px-4 py-2.5 border border-slate-200 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500', placeholder: 'At least 6 characters' %>
            <% if @minimum_password_length %>
              <p class="mt-1 text-xs text-slate-500">Minimum <%= @minimum_password_length %> characters</p>
            <% end %>
          </div>

          <div>
            <label class="block text-sm font-medium text-slate-700 mb-1">Confirm Password</label>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-full px-4 py-2.5 border border-slate-200 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500', placeholder: 'Confirm your password' %>
          </div>
        </div>

        <div class="pt-4">
          <%= f.submit "Start Free Trial", class: 'w-full bg-emerald-500 hover:bg-emerald-600 text-white py-3 rounded-lg font-semibold transition-all cursor-pointer' %>
        </div>

        <p class="text-center text-sm text-slate-600">
          Already have an account?
          <%= link_to 'Sign in', new_user_session_path, class: 'text-emerald-600 hover:text-emerald-700 font-medium' %>
        </p>
      <% end %>
    </div>

    <p class="mt-6 text-center text-xs text-slate-500">
      By signing up, you agree to our
      <a href="#" class="underline">Terms of Service</a> and
      <a href="#" class="underline">Privacy Policy</a>
    </p>
  </div>
</div>
