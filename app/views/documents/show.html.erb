<div class="min-h-screen bg-slate-50">
  <%= render 'shared/header' %>

  <div class="max-w-4xl mx-auto px-6 py-8">
    <div class="mb-6">
      <%= link_to documents_path, class: 'inline-flex items-center gap-2 text-slate-600 hover:text-slate-900' do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
        Back to Documents
      <% end %>
    </div>

    <div class="bg-white rounded-2xl border border-slate-200 overflow-hidden">
      <!-- Header -->
      <div class="p-6 border-b border-slate-200">
        <div class="flex justify-between items-start">
          <div class="flex items-start gap-4">
            <div class="w-14 h-14 bg-slate-100 rounded-xl flex items-center justify-center">
              <svg class="w-7 h-7 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>
            </div>
            <div>
              <h1 class="text-2xl font-bold text-slate-900"><%= @document.name %></h1>
              <% if @document.compliance_category %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium mt-2" style="background-color: <%= @document.compliance_category.color %>20; color: <%= @document.compliance_category.color %>">
                  <%= @document.compliance_category.name %>
                </span>
              <% end %>
            </div>
          </div>
          <div class="flex items-center gap-2">
            <%= link_to edit_document_path(@document), class: 'px-4 py-2 border border-slate-200 rounded-lg text-slate-700 hover:bg-slate-50 font-medium transition-colors' do %>
              Edit
            <% end %>
            <% if @document.file.attached? %>
              <%= link_to download_document_path(@document), class: 'px-4 py-2 bg-emerald-500 hover:bg-emerald-600 text-white rounded-lg font-medium transition-colors flex items-center gap-2' do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/></svg>
                Download
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Status Banner -->
      <div class="px-6 py-3 
        <% case @document.status %>
        <% when 'active' %>bg-emerald-50 border-b border-emerald-100
        <% when 'expiring_soon' %>bg-amber-50 border-b border-amber-100
        <% when 'expired' %>bg-red-50 border-b border-red-100
        <% else %>bg-slate-50 border-b border-slate-100
        <% end %>">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-2">
            <% case @document.status %>
            <% when 'active' %>
              <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
              <span class="font-medium text-emerald-700">Compliant</span>
            <% when 'expiring_soon' %>
              <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/></svg>
              <span class="font-medium text-amber-700">Expiring in <%= @document.days_until_expiry %> days</span>
            <% when 'expired' %>
              <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
              <span class="font-medium text-red-700">Expired</span>
            <% end %>
          </div>
          <% if @document.expiration_date %>
            <span class="text-sm text-slate-600">Expires: <%= @document.expiration_date.strftime('%B %d, %Y') %></span>
          <% end %>
        </div>
      </div>

      <!-- Details -->
      <div class="p-6 grid md:grid-cols-2 gap-6">
        <div class="space-y-4">
          <div>
            <label class="text-xs font-medium text-slate-500 uppercase tracking-wider">Description</label>
            <p class="text-slate-900 mt-1"><%= @document.description.presence || 'No description' %></p>
          </div>
          <div>
            <label class="text-xs font-medium text-slate-500 uppercase tracking-wider">Issuing Authority</label>
            <p class="text-slate-900 mt-1"><%= @document.issuing_authority.presence || '—' %></p>
          </div>
          <div>
            <label class="text-xs font-medium text-slate-500 uppercase tracking-wider">Reference Number</label>
            <p class="text-slate-900 mt-1"><%= @document.reference_number.presence || '—' %></p>
          </div>
        </div>
        <div class="space-y-4">
          <div>
            <label class="text-xs font-medium text-slate-500 uppercase tracking-wider">Issue Date</label>
            <p class="text-slate-900 mt-1"><%= @document.issue_date&.strftime('%B %d, %Y') || '—' %></p>
          </div>
          <div>
            <label class="text-xs font-medium text-slate-500 uppercase tracking-wider">Assigned To</label>
            <p class="text-slate-900 mt-1"><%= @document.assigned_to&.full_name || 'Unassigned' %></p>
          </div>
          <div>
            <label class="text-xs font-medium text-slate-500 uppercase tracking-wider">Uploaded By</label>
            <p class="text-slate-900 mt-1"><%= @document.uploaded_by.full_name %> on <%= @document.created_at.strftime('%B %d, %Y') %></p>
          </div>
        </div>
      </div>

      <!-- File Preview -->
      <% if @document.file.attached? %>
        <div class="px-6 pb-6">
          <div class="border border-slate-200 rounded-xl p-4">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-red-600" fill="currentColor" viewBox="0 0 24 24"><path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8l-6-6zm4 18H6V4h7v5h5v11z"/></svg>
                </div>
                <div>
                  <p class="font-medium text-slate-900"><%= @document.file.filename %></p>
                  <p class="text-sm text-slate-500"><%= number_to_human_size(@document.file.byte_size) %></p>
                </div>
              </div>
              <%= link_to download_document_path(@document), class: 'text-emerald-600 hover:text-emerald-700 font-medium' do %>
                Download
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Danger Zone -->
    <div class="mt-8 bg-white rounded-xl border border-red-200 p-6">
      <h3 class="font-semibold text-red-700 mb-2">Danger Zone</h3>
      <p class="text-sm text-slate-600 mb-4">Once you delete a document, there is no going back.</p>
      <%= button_to document_path(@document), method: :delete, class: 'px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg font-medium transition-colors', data: { turbo_confirm: 'Are you sure you want to delete this document?' } do %>
        Delete Document
      <% end %>
    </div>
  </div>
</div>
